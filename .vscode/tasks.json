    "version": "2.0.0",
    "tasks": [
        {
            "label": "Tests",
            "type": "shell",
            "command": "mvn",
            "args": ["clean", "test"],
            "problemMatcher": []
        },
        {
            "label": "One Test",
            "type": "shell",
            "command": "mvn",
            "linux": {
                "args": ["clean", "-Dtest=IntegrationTest", "test"]
            },
            "windows": {
                "args": ["clean", "-Dtest='fuun.piecetable.PieceTableTest#testTruncate'", "test"]
            },
            "problemMatcher": []
        },
        {
            "label": "Run App",
            "type": "shell",
            "command": "mvn",
            "args": ["exec:java", "-D'exec.mainClass'=fuun.App", "-D'exec.args'=dna/endo.dna"],
            "problemMatcher": []
        }
    ]
}
